<tr>
  <td><%= post.id %></td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td
    <%= status_badge post.status %>
  </td>
  <td>
    <%= link_to fa_icon("edit"), edit_post_path(post), id: "edit_#{post.id}", class: "action-icon text-primary" if policy(post).update? %>
  </td>
  <td>
    <%= link_to fa_icon("trash"), post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", class: "action-icon text-danger" %>
  </td>
</tr>
