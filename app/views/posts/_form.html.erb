<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |err| %>
      <%= js add_gritter(err, title: "TimeTracker Notification", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :overtime_request %>
    <%= f.number_field :overtime_request, class: "form-control", step: 0.1 %>
  </div>

  <%= render partial: 'status', locals: {f: f} if current_user.type  == 'AdminUser' %>

  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
