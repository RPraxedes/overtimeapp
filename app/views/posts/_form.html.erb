<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |err| %>
      <%= js add_gritter(err, title: "TimeTracker Notification", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'Submitted' %>
    <%= f.radio_button :status, 'submitted' %> <br>
    <%= f.label :status, 'Approved' %>
    <%= f.radio_button :status, 'approved' %> <br>
    <%= f.label :status, 'Rejected' %>
    <%= f.radio_button :status, 'rejected' %>
  </div>
  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
